mixin article(i, date='10.12.2020', text=`Компания АРТЕХ&nbsp;&mdash; это профессиональный подход в&nbsp;промышленной автоматизации`)
	+b.article&attributes(attributes)
		.row
			+e.col
				+pic(i,'bg')
			.col
				+e.wrap
					+e.date= date 
					+e.text!= text 
					div
						a.btn.btn-primary(href="#") Подробнее


mixin table
	table.table
		mixin tr(l,r)
			tr
				td!= l
				td!= r
		+tr('Форм-фактор','Моноблок')
		+tr('Материал корпуса','Стекло, Алюминий')
		+tr('Защита корпуса','От влаги и пыли, Водонепроницаемость')
		+tr('Степень защиты','IP 67')
		+tr('Операционная система','iOS')
		+tr('Количество SIM-карт','1')
		+tr('Тип SIM-карты','Nano-SIM')

mixin photo(i, g='galery')
	+b.photo(href=`img/@2x/${i}` data-fancybox= g)&attributes(attributes)
		+pic(i,'','')

mixin video(i, a='https://www.youtube.com/watch?v=kXYiU_JCYtU')
	+b.video(href= a data-fancybox="video")&attributes(attributes)
		+pic(i,'','')
		+e.icon

mixin sitebar(t="Cодержание:")
	+b.sitebar&attributes(attributes)
		+e.title= t
		if block 
			block 
		else
			ul
				li
					+b.sitebar-link(href="#") Заголовок 1
				li
					+b.sitebar-link(href="#") Заголовок 2
				li
					+b.sitebar-link(href="#") Заголовок 3
				li
					+b.sitebar-link(href="#") Заголовок 4
			.text-center.text-secondary.fw-600 Поделиться:
			+soc-sm().light
mixin filter-group(t, ...items)
	+b.filter-group
		+e.title= t
		each item in items
			+in-c("", item)
