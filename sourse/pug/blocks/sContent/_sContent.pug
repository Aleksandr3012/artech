mixin sContent()
	// start sContent
	+b.SECTION.sContent.section#sContent&attributes(attributes)
		.container
			if block 
				block 
			else
				+e.row.row 
					.col-lg-auto.order-lg-last 
						+sitebar
					.col-lg
